@model MVCProje.Models.Entity.TBL_KATEGORILER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.KATEGORIID)
    @Html.TextBoxFor(y => y.KATEGORIID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.KATEGORIAD)
    @Html.TextBoxFor(y => y.KATEGORIAD, new { @class = "form-control" })
</div>
<div>
    <button class="btn btn-warning">Güncelle</button>
</div>
}

